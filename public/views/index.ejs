<body>
    <h1 style="font-weight : bold;font-size : 50px;">Restaurant Table Booking</h1>
    <form id="bookingForm" action="/booking" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" class="input" required><br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" class="input" required><br>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" class="input"required><br>
        <label for="time">Time:</label>
        <input type="time" id="time" name="time" class="input" required><br>
        <label for="partySize">Party Size:</label>
        <input type="number" id="partySize" name="partySize" min="1" class="input" required><br>
        
        <div class="hi">
            <button class="button"type="submit" style="margin : 20px;">Book Now</button>
            <button class="button" type="button" onclick="cancelOrder()" style="margin:20px;">Cancel Order</button>
    </div>

    </form>

